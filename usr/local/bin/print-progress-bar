#!/bin/bash
w=20
p=$1
shift

# Calculate number of dots
num_dots=$(( p*w/100 ))

# Build dots string
dots=""
for ((i=0; i<num_dots; i++)); do
    dots="${dots}∙"
done

# Build spaces with markup
spaces=""
remaining=$(( w - num_dots ))
for ((i=0; i<remaining; i++)); do
    spaces="${spaces}<span foreground='#252525'>∙</span>"
done

# Print with manual padding
printf "[%s%s] %3d %% %s" "$dots" "$spaces" "$p" "$*"
